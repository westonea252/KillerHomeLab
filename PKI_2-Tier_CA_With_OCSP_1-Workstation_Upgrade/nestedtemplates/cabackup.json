{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName": {
            "type": "string",
            "metadata": {
                "description": "Computer Name"
            }
        },
        "NetBiosDomain": {
            "type": "string",
            "metadata": {
                "description": "NetBios Domain Name"
            }
        },                                        
        "DCIP": {
            "type": "string",
            "metadata": {
                "description": "DCIP"
            }
        },        
        "CAName": {
            "type": "string",
            "metadata": {
                "description": "CA Name"
            }
        },
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
          "metadata": {
            "description": "The password for the Administrator account of the new VM and Domain"
          }
        },         
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }                
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('DSC/CABACKUP.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "CABACKUP.ps1\\CABACKUP"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                        "Properties": {
                            "NetBiosDomain": "[parameters('NetBiosDomain')]",                                                        
                            "DCIP": "[parameters('DCIP')]",                                                                                    
                            "CAName": "[parameters('CAName')]",
                            "AdminCreds": {
                                "UserName": "[parameters('adminUsername')]",
                                "Password": "PrivateSettingsRef:AdminPassword"                                                                                   
                            }

                        }
                },
                "protectedSettings": {
                    "Items": {
                        "AdminPassword": "[parameters('adminPassword')]"
                    }
                }                
            }
        }
    ]
}