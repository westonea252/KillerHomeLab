{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "Admin Username"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "Admin Password"
      }
    },       
    "WindowsServerLicenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "Windows_Server"
      ],      
      "metadata": {
          "description": "Windows Server OS License Type"
      }
    },    
    "WindowsClientLicenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "Windows_Client"
      ],      
      "metadata": {
          "description": "Windows Client OS License Type"
      }
    },    
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "VNet1 Name"
      }
    },
    "SubDNSDomain": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Sub DNS Domain Name Example:  sub1. must include a DOT AT END. LEAVE EMPTY IF NO SUB DNS DOMAIN IS NEEDED!!!!"
      }
    },      
    "SubDNSBaseDN": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Sub DNS Domain Name Example:  DC=sub2,DC=sub1, must include COMMA AT END. LEAVE EMPTY IF NO SUB DNS DOMAIN IS SPECIFIED!!!!"
      }
    },          
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "dir",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },          
    "InternalDomain": {
      "type": "string",
      "defaultValue": "killerhomelab",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },              
    "TLD": {
      "type": "string",
      "defaultValue": "com",
      "allowedValues": [
        "com",
        "net",
        "org",
        "edu",
        "gov",
        "mil"
      ],      
      "metadata": {
          "description": "Top-Level Domain Name"
      }
    },                            
    "vnet1ID": {
      "type": "string",
      "defaultValue": "10.1",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },    
    "ReverseLookup1": {
      "type": "string",
      "defaultValue": "1.10",
      "metadata": {
          "description": "DNS Reverse Lookup Zone1 Prefix"
      }
    },      
    "RootCAName": {
      "type": "string",
      "defaultValue": "Offline Root CA",
      "metadata": {
          "description": "Offline Root CA Name"
      }
    },                    
    "IssuingCAName": {
      "type": "string",
      "defaultValue": "Issuing CA",
      "metadata": {
          "description": "Issuing CA Name"
      }
    },
    "RootCAHashAlgorithm": {
      "type": "string",
      "defaultValue": "SHA256",
        "allowedValues": [
          "SHA256",
          "SHA1"
        ],
      "metadata": {
          "description": "Offline Root CA Algorithm"
      }
    },    
    "RootCAKeyLength": {
      "type": "string",
      "defaultValue": "4096",
        "allowedValues": [
          "4096",
          "2048"
        ],
      "metadata": {
          "description": "Offline Root CA Key Length"
      }
    },                                
    "IssuingCAHashAlgorithm": {
      "type": "string",
      "defaultValue": "SHA256",
        "allowedValues": [
          "SHA256",
          "SHA1"
        ],
      "metadata": {
          "description": "Issuing CA Algorithm"
      }
    },    
    "IssuingCAKeyLength": {
      "type": "string",
      "defaultValue": "4096",
        "allowedValues": [
          "4096",
          "2048"
        ],
      "metadata": {
          "description": "Issuing CA Key Length"
      }
    },        
    "DC1OSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter"
        ],
        "metadata": {
            "description": "Domain Controller1 OS Version"
        }
    },
    "RCAOSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter",
          "2012-R2-Datacenter"
        ],
        "metadata": {
            "description": "Offline Root CA OS Version"
        }
    },   
    "ICAOSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter",
          "2012-R2-Datacenter"
        ],
        "metadata": {
            "description": "Issuing CA OS Version"
        }
    },     
    "OCSPOSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter",
          "2012-R2-Datacenter"
        ],
        "metadata": {
            "description": "OCSP OS Version"
        }
    },         
    "WK1OSVersion": {
      "type": "string",
      "defaultValue": "19h1-pro",
      "allowedValues": [
        "19h1-pro"
      ],
      "metadata": {
          "description": "Workstation1 OS Version"
      }
  },    
    "DC1VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Domain Controller1 VMSize"
        }
    },        
    "RCAVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Offline Root CA VMSize"
        }
    },
    "ICAVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Issuing CA VMSize"
        }
    },                        
    "OCSPVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "OCSP VMSize"
        }
    },            
    "WK1VMSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
          "description": "Workstation1 VMSize"
      }
    },             
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    }
  },
  "variables": {
    "vnet1Name": "[concat(parameters('NamingConvention'),'-VNet1')]",
    "vnet1Prefix": "[concat(parameters('vnet1ID'),'.0.0/16')]",
    "vnet1subnet1Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet1')]",    
    "vnet1subnet1Prefix": "[concat(parameters('vnet1ID'),'.1.0/24')]",    
    "vnet1subnet2Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet2')]",    
    "vnet1subnet2Prefix": "[concat(parameters('vnet1ID'),'.2.0/24')]",    
    "vnet1BastionsubnetPrefix": "[concat(parameters('vnet1ID'),'.253.0/24')]",        
    "dc1name": "[concat(parameters('NamingConvention'),'-dc-01')]",           
    "dc1IP": "[concat(parameters('vnet1ID'),'.1.',variables('dc1lastoctet'))]",        
    "rcaname": "[concat(parameters('NamingConvention'),'-rca-01')]",           
    "rcaIP": "[concat(parameters('vnet1ID'),'.1.',variables('rcalastoctet'))]",            
    "icaname": "[concat(parameters('NamingConvention'),'-ica-01')]",           
    "icaIP": "[concat(parameters('vnet1ID'),'.1.',variables('icalastoctet'))]",            
    "ocspname": "[concat(parameters('NamingConvention'),'-ocsp-01')]",           
    "ocspIP": "[concat(parameters('vnet1ID'),'.1.',variables('ocsplastoctet'))]",                    
    "ReverseLookup1": "[concat('1.',parameters('ReverseLookup1'))]",    
    "dc1lastoctet": "101",        
    "rcalastoctet": "99",
    "icalastoctet": "102",
    "ocsplastoctet": "103",                    
    "wk1lastoctet": "201",            
    "wk1name": "[concat(parameters('NamingConvention'),'-wk-01')]",           
    "wk1IP": "[concat(parameters('vnet1ID'),'.2.',variables('wk1lastoctet'))]",        
    "DCDataDisk1Name": "NTDS",           
    "CATemplateScriptUrl": "https://elliottf.blob.core.windows.net/github/Scripts/Create_CA_Templates.ps1",              
    "domainName": "[concat(parameters('SubDNSDomain'),parameters('InternalDomain'),'.',parameters('TLD'))]",
    "BaseDN": "[concat(parameters('SubDNSBaseDN'),'DC=',parameters('InternalDomain'),',DC=',parameters('TLD'))]",
    "WKOUPath": "[concat('OU=Windows 10,OU=Workstations,',variables('BaseDN'))]",
    "SRVOUPath": "[concat('OU=Servers,',variables('BaseDN'))]"    
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "VNet1",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vnet.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('vnet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('vnet1Prefix')]"
              },
              "subnet1Name": {
                  "value": "[variables('vnet1subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[variables('vnet1subnet1Prefix')]"
              },
              "subnet2Name": {
                "value": "[variables('vnet1subnet2Name')]"
              },
              "subnet2Prefix": {
                "value": "[variables('vnet1subnet2Prefix')]"
              },              
              "BastionsubnetPrefix": {
                "value": "[variables('vnet1BastionsubnetPrefix')]"
              },              
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "BastionHost1",
      "dependsOn": [
        "VNet1"
      ],
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/bastionhost.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "publicIPAddressName": {
                "value": "[concat(variables('vnet1Name'),'-Bastion-pip')]"
              },
              "AllocationMethod": {
                "value": "Static"
              },              
              "vnetName": {
                  "value": "[variables('vnet1Name')]"
              },
              "subnetName": {
                  "value": "AzureBastionSubnet"
              },
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployDC1VM",
      "dependsOn": [
        "VNet1"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-2disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "computerIP": {
                  "value": "[variables('dc1IP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('DC1OSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },            
              "DataDisk1Name": {
                "value": "[variables('DCDataDisk1Name')]"
              },            
              "VMSize": {
                "value": "[parameters('DC1VMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },                                                                                                                       
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "promotedc1",
      "dependsOn": [
        "DeployDC1VM"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/firstdc.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "DomainName": {
                "value": "[variables('DomainName')]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              }, 
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "updatevnet1dns",
      "dependsOn": [
        "promotedc1"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/updatevnetdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('vnet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('vnet1Prefix')]"
              },
              "subnet1Name": {
                "value": "[variables('vnet1subnet1Name')]"
              },                                                                                                            
              "subnet1Prefix": {
                "value": "[variables('vnet1subnet1Prefix')]"
              }, 
              "subnet2Name": {
                "value": "[variables('vnet1subnet2Name')]"
              },                                                                                                            
              "subnet2Prefix": {
                "value": "[variables('vnet1subnet2Prefix')]"
              },               
              "BastionsubnetPrefix": {
                "value": "[variables('vnet1BastionsubnetPrefix')]"
              },                         
              "DNSServerIP": {
                "value": [
                  "[variables('dc1IP')]"
                ]
              },                                                                                                            
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "restartdc1",
      "dependsOn": [
        "updatevnet1dns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/restartvm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                                         
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "configdns",
      "dependsOn": [
        "restartdc1"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/configdns.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "DomainName": {
                "value": "[variables('DomainName')]"
              },              
              "ReverseLookup1": {
                "value": "[variables('ReverseLookup1')]"
              },                                                                                                            
              "dc1lastoctet": {
                "value": "[variables('dc1lastoctet')]"
              },    
              "ISSUINGCAIP": {
                "value": "[variables('icaIP')]"
              },                                                                                                                          
              "OCSPIP": {
                "value": "[variables('ocspIP')]"
              },                                                                                                                                                                                                                                                                            
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "createous",
      "dependsOn": [
        "configdns"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/createous.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('dc1name')]"
              },
              "BaseDN": {
                "value": "[variables('BaseDN')]"
              },              
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              },                                                                                                                                                                                                                                                                                                           
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployrootca",
      "dependsOn": [
        "createous"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-1disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('rcaname')]"
              },
              "computerIP": {
                  "value": "[variables('rcaIP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('rcaOSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },            
              "VMSize": {
                "value": "[parameters('rcaVMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },                                                                                                                   
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },  
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "configurerootca",
      "dependsOn": [
        "deployrootca"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/rootca.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('rcaname')]"
              },
              "RootCAName": {
                  "value": "[parameters('RootCAName')]"
              },
              "RootCAHashAlgorithm": {
                  "value": "[parameters('RootCAHashAlgorithm')]"
              },  
              "RootCAKeyLength": {
                  "value": "[parameters('RootCAKeyLength')]"
              },                            
              "RootDomainFQDN": {
                  "value": "[variables('domainName')]"
              },
              "BaseDN": {
                  "value": "[variables('BaseDN')]"
              },
              "location": {
                  "value": "[resourceGroup().location]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                               
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "deployissuingca",
      "dependsOn": [
        "configurerootca"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-1disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('icaname')]"
              },
              "computerIP": {
                  "value": "[variables('icaIP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('icaOSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },            
              "VMSize": {
                "value": "[parameters('icaVMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },                                                                                                                   
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "DomainJoinIssuingCA",
      "dependsOn": [
        "deployissuingca"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/domainjoin.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('icaname')]"
              },
              "domainName": {
                  "value": "[variables('domainName')]"
              },
              "OUPath": {
                  "value": "[variables('SRVOUPath')]"
              },
              "domainJoinOptions": {
                  "value": 3
              },
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                                                                                                                                                             
              "location": {
                  "value": "[resourceGroup().location]"
              }
