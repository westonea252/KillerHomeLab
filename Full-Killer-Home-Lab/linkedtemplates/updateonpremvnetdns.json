{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vnetName": {
        "type": "string",
        "metadata": {
          "description": "VNet name"
        }
      },
      "vnetprefix": {
        "type": "string",
        "metadata": {
          "description": "VNet prefix"
        }
      },
      "subnet1Name": {
        "type": "string",
        "metadata": {
          "description": "Subnet 1 Name"
        }
      },      
      "subnet1Prefix": {
        "type": "string",
        "metadata": {
          "description": "Subnet 1 Prefix"
        }
      },
      "subnet2Name": {
        "type": "string",
        "metadata": {
          "description": "Subnet 2 Name"
        }
      },      
      "subnet2Prefix": {
        "type": "string",
        "metadata": {
          "description": "Subnet 2 Prefix"
        }
      },      
      "BastionsubnetPrefix": {
        "type": "string",
        "metadata": {
          "description": "Bastion Subnet Prefix"
        }
      },  
      "DNSServerIP": {
        "type": "array",
        "metadata": {
          "description": "The DNS address(es) of the DNS Server(s) used by the VNET"
        }
      },   
      "NetworkSecurityGroupName": {
        "type": "string",
        "metadata": {
          "description": "Network Security Group Name"
        }
      },            
      "RouteTableName": {
        "type": "string",
        "metadata": {
          "description": "Route Table Name"
        }
      },               
      "location": {
        "type": "string",
        "metadata": {
          "description": "Region of Resources"
        }
      }
    },
    "variables": {
        "NetworkSecurityGroupID": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('NetworkSecurityGroupName'))]",
        "RouteTableId": "[resourceId(resourceGroup().name, 'Microsoft.Network/routeTables', parameters('RouteTableName'))]"            
    },        
    "resources": [
      {
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('vnetName')]",
        "apiVersion": "2020-04-01",
        "location": "[parameters('location')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vnetprefix')]"
            ]
            },
            "dhcpOptions": {
              "dnsServers": "[parameters('DNSServerIP')]"
            },           
            "subnets": [
            {
              "name": "[parameters('subnet1Name')]",
              "properties": {
                "addressPrefix": "[parameters('subnet1Prefix')]", 
                "networkSecurityGroup": {
                  "id": "[variables('NetworkSecurityGroupID')]"
                }
              }                             
            },
            {
              "name": "[parameters('subnet2Name')]",
              "properties": {
                "addressPrefix": "[parameters('subnet2Prefix')]",
                "RouteTable": {
                  "id": "[variables('RouteTableId')]"
                }                                 
              }
            },          
            {
              "name": "AzureBastionSubnet",
              "properties": {
                "addressPrefix": "[parameters('BastionsubnetPrefix')]"
              }
            }                    
          ]
        }
      }
  ]
}
